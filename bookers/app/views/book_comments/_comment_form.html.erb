<%= form_with(model:[book, @book_comment], id: "new_comment") do |f| %> <!--配列でインスタンス変数を2つ指定。コメントは、@bookに結びついた@commentだから-->
  <%= f.text_area :comment, rows: '5', class: "textbox", placeholder: "コメントをここに" %> <!--rowはtext_areaの高さ、初期値は2-->
  <%= f.submit "送信する", class: "form_submit, btn btn-lg btn-base-1 mt-20 pull-right" %>
<% end %>